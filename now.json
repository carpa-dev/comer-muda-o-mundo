{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@now/next" },
    {
      "src": "adonis/server.js",
      "use": "@now/node-server",
      "config": {
        "includeFiles": ["**"],
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "nestjs/dist/main.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "/adonis/server.js"
    },
    {
      "src": "/api/v2/(.*)",
      "dest": "/nestjs/dist/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1",
      "continue": true
    }
  ],
  "env": {
    "ENV_PATH": "now.env"
  },
  "build": {
    "env": {
      "GOOGLE_MAPS_KEY": "@google_maps_key"
    }
  }
}
