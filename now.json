{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@now/next" },
    {
      "src": "adonis/server.js",
      "use": "@now/node-server",
      "config": {
        "includeFiles": ["**"],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "/adonis/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ],
  "env": {
    "ENV_PATH": "now.env"
  },
  "build": {
    "env": {
      "GOOGLE_MAPS_KEY": "@google_maps_key"
    }
  }
}
